<div id="content">
  <div class="container-fluid">
	  <div class="row">
		  <div class="col-md-12 col-xs-12">
		  <% cache @product do %>
	        <h1 class="title"><%= @product.name %></h4>
	      <% end %>
	
	      <div class="image"><%= image_tag(@product.image_url, class: "img-responsive img-zoom", data_zoom_image: @product.image_url) %></div>
	
	    </div>
	  </div>
	</div>
	
  <div class="container-fluid">
	  <div class="row">
		  <div class="col-md-12 col-xs-12">
		    
		    <h3>Description</h3>
	      <p class="description"><%= @product.description %></p>
	
	      <h3>Price</h3>
	      <p class="price"><%= number_to_currency(@product.price) %></p>

	      <h3>Colour</h3>
	      <p class="colour"><%= @product.colour %></p>
	      
	     </div>
	  </div>
	</div>


   <%= form_tag "/payments/create" do %>
   <%= render partial: "shared/stripe_checkout_button" %>
   <% end %>

<%= render 'new_comment' %>
<%= render 'comments' %>
<div class="alert alert-info" style="display: none" role="alert">A new comment was posted!</div>

<p>Average Rating: <div class="rated" data-score="<%= @product.average_rating %>"></div> </p>


</p>
      </div>
	  </div>
	</div>

</div>
<%= will_paginate @comments %>


<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to "Delete Product", product_path(@product), method: :delete, data: { confirm: "Are you sure?" } %>




